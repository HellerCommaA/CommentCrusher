{
    "manifest_version": 2,
    "name": "Comment Crusher",
    "description": "This extension blocks stupid and agrivating comment sections on websites!",
    "version": "0.1.2",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery-1.11.3.min.js",
                "helloworld.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "CommentCrusher"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}